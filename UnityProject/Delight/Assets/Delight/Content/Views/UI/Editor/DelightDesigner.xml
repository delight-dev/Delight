<DelightDesigner xmlns="Delight" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="Delight ../../../Delight.xsd"
                 Module="TextMeshPro"
                 BasedOn="LayoutRoot" DesignerViews="t:DesignerViewData" HideInDesigner="True" IsEditorView="True" XmlText="t:string">

  <Grid Columns="170[20],450[20],*" Rows="*" BackgroundColor="#55a3ff">

    <!-- Right Menu -->
    <!--<Region Grid.Cell="1,2" BackgroundColor="#dcdcdc"/>-->

    <!-- Designer Content Region -->
    <ScrollableRegion Id="ScrollableContentRegion" Grid.Cell="0,2" HasInertia="False" ScrollbarVisibility="Never" Scroll="OnScroll" DisableMouseWheel="True">
      <Canvas Id="ContentRegionCanvas" Scale="1">
        <Region Id="ViewContentRegion">
        </Region>
      </Canvas>
    </ScrollableRegion>

    <!-- Left Panel - Content Explorer -->
    <Region Id="ContentExplorer" Grid.Cell="0,0" BackgroundColor="#fdfdfd">
      <Label Text="Views" FontSize="18" Font="Segoe UI SDF" Alignment="TopLeft" Margin="19,0,0,0" Height="40" TextAlignment="Left" Width="100%" OverflowMode="Ellipsis" FontColor="#394459" />
      <List IsScrollable="True" Items="{view in DesignerViews}" Alignment="Top" Margin="4,40,2,2" BackgroundColor="clear" Width="100%" Height="100%" CanReselect="True"
            ScrollableRegionContentAlignment="Top" DisableInteractionScrollDelta="1" SelectOnMouseUp="True" HasInertia="False" ItemSelected="ViewSelected"
            VerticalScrollbarVisibility="Never">
        <ListItem Pressed-BackgroundSprite="ListSelection" Highlighted-BackgroundSprite="ListSelection" Highlighted-BackgroundColor="#f9f9f9" Selected-BackgroundColor="#f4f4f4" Pressed-BackgroundColor="#f4f4f4">
          <Label Text="{view.Name}" FontSize="16" Font="Segoe UI SDF" Height="24" FontColor="#cc394459" Width="100%" Margin="16,0,0,0" EnableWordWrapping="False" OverflowMode="Ellipsis" ExtraPadding="True" />
        </ListItem>
      </List>
    </Region>

    <!-- Left Panel - XML editor -->
    <Region Id="XmlEditor" Grid.Cell="0,1" BackgroundColor="#fbfbfb">
      <!--<Label Text="XML Editor" FontSize="20" Font="Ebrima SDF" Alignment="TopLeft" Margin="28,0,0,0" Height="50" TextAlignment="Left" Width="100%" />-->
      <Region Id="XmlEditArea" Margin="25,25,0,0">
        <InputField Id="XmlTextInputField" Text="{XmlText}" Width="100%" Height="100%" Margin="2,2,2,2" OverflowMode="Overflow" LineType="MultiLineNewline" EnableWordWrapping="False" IsRichTextEditingAllowed="False" RichText="False" BackgroundColor="clear"
                    Font="Inconsolata-Regular SDF" FontSize="20" FontColor="#dddddd"/>
        <Label Id="XmlTextLabel" Text="" Font="Inconsolata-Regular SDF" FontSize="20" Width="100%" Height="100%" OverflowMode="Overflow" EnableWordWrapping="False" TextAlignment="TopLeft" Margin="12,14,2,2" RaycastBlockMode="Never" />
      </Region>
    </Region>

    <GridSplitter Thickness="20" />

  </Grid>

</DelightDesigner>
